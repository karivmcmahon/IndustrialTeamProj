<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView 
        android:id="@+id/iv_potato_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/flag_description"/>
    
    <TextView 
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@id/iv_potato_icon" 
        android:textSize="25sp" />
    
    <TextView 
        android:id="@+id/tv_potato_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@id/tv_name"
        android:textSize="25sp" />
    
    <TextView 
        android:id="@+id/tv_potato_further_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@id/tv_potato_desc"
        android:textSize="25sp"/>

</RelativeLayout>
